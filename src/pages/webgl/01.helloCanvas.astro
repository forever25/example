---
import Layout from '@layouts/Layout.astro';
---

<Layout>
  <canvas id="example" width="800" height="800" class="border mx-auto mt-11"> </canvas>
</Layout>

<script>
  import { colorNormalization } from '@utils/mUtils';

  function main() {
    const canvas = document.querySelector('#example') as HTMLCanvasElement;
    const gl = canvas.getContext('webgl')!; // 获取webGL对象

    gl.clearColor(...colorNormalization(148, 172, 130, 1)); // 指定绘图区域背景颜色 格式为 rgba 单位是0-1
      gl.clear(gl.COLOR_BUFFER_BIT); // 使用背景色填充绘图区域
  }

  main();
</script>
